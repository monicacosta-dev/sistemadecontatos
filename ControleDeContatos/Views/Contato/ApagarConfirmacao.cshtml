@model ContatoModel
@{
    ViewData["Title"] = "Confirmação Apagar do Contato";
}
<div class="text-center">
    <h3>Realmente seseja apagar o contato (@Model.Name)?</h3 >
</div>
<br/>
<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar Contato?</a>
<a class="btn btn-danger" role="button" asp-controller="Contato" asp-route-id = "@Model.Id" asp-action="Apagar">Confirma Cancelamento de Contato?</a>