@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}
<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>

</div>

<br />

<form asp-controller="Contato" asp-action="Alterar" method="post">
    <input type="hidden" asp-for ="Id"/>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato!">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <br />
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do contato!">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o celular do contato!">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Alterar Contato</button>
    <a class="btn btn-dark" asp-controller="Contato" asp-action="Index" role="button">Voltar pagina inicial</a>
</form>
